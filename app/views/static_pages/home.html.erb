<% if user_signed_in? %>
	<div class="row">
		<div class="col-lg-6">
			<div class="panel panel-info">
				<div class="panel-heading">Forthcoming events:</div>
				<div class="panel-body">

					<% @events.each do |event| %>
						<div class="media">
						  <a class="pull-left" href="<%= event_path(event) %>">
						    <%= image_tag event.avatar(:small), width:"100" %>
						  </a>
						  <div class="media-body">
						  	<div class="media-heading">
						  		<h4><%= link_to event.title, event %></h4>
						    	<p><span class="glyphicon glyphicon-calendar"></span> <%= event.time %></p>
						    	<p><span class="glyphicon glyphicon-map-marker"></span> <%= event.place %></p>
						  	</div>
						  </div>
						</div>
						<p><span>Followers:</span> <%#= number_of_participants(event) %></p>
					<% end %>

				</div>
			</div>
		</div>
		<div class="col-lg-6">
			<div class="panel panel-info">
				<div class="panel-heading">Top users:</div>
				<div class="panel-body">
					<% @top_users.each do |user| %>
					<div class="media">
						<a class="pull-left" href="#">
							<%= image_tag(user[0].profile.avatar.url, class:"media-object", width:"100") %>
						</a>
						<div class="media-body">
							<h4 class="media-heading"><%= user[0].profile.first_name %> <%= user[0].profile.last_name %></h4>
								<p>events count: <%= user[1] %></p>
						</div>
					</div>
					<% end %>
				</div>
			</div>
		</div>
	</div>
<% else %>
	<%= image_tag("352745.jpg", :class => "bg") %>
	<div class="home">
		<div class="page-header pull-right">
			<h1>The Events manager.</h1>
			<p>
				This is a simple <span class="text-primary">"Ruby on Rails"</span> project. To upgrade a full stack of skills.
			</p>
			<p>
				<%= link_to "Learn more", 'about page', class:"btn btn-default" %>
				<%= link_to "Sign up", new_user_registration_path, class:"btn btn-default" %>
			</p>
		</div>
	</div>
<% end %>
