<li class="media" data-id="<%= comment.id %>">
  <a class="pull-left" href="#">
    <img class="media-object" src="data:image/svg+xml;base64," alt="...">
  </a>
  <div class="media-body">
    <h4 class="media-heading">	<%= comment.user.profile.first_name %> <%= comment.user.profile.last_name %></h4>
    <p><%= comment.content %></p>
    <%= link_to 'Destroy', comment, method: :delete, data: { confirm: 'Are you sure?' }, remote: true, class: "comment-delete-link" %>
  </div>
</li>