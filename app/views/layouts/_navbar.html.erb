<div class="navbar navbar-default navbar-fixed-top">
	<div class="container">
		<div class="navbar-header">
			<a href="../" class="navbar-brand">Events manager</a>
			<button class="navbar-toggle" type="button" data-toggle="collapse" data-target="#navbar-main">
				<span class="icon-bar"></span>
				<span class="icon-bar"></span>
				<span class="icon-bar"></span>
			</button>
		</div>
		<div class="navbar-collapse collapse" id="navbar-main">
			<ul class="nav navbar-nav">
				<li><%= link_to "Events", events_path %></li>
				<li><%= link_to "Top Users", '#' %></li>
				<li><%= link_to "Tags", tags_path %></li>
				<li><%= link_to "Categories", categories_path %></li>
			</ul>
			<%= render 'layouts/search' %>

			<ul class="nav navbar-nav navbar-right">
				<% if user_signed_in? %>
					<p class="navbar-text">Signed in as <%= current_user.email %></p>
					<li class="dropdown">
						<a class="dropdown-toggle" data-toggle="dropdown" href="#" id="download">Account <span class="caret"></span></a>
						<ul class="dropdown-menu" aria-labelledby="download">
							<li><%= link_to "Profile", profile_path(current_user) %></li>
							<li><%= link_to "Settings", edit_user_registration_path %></li>
							<li class="divider"></li>
							<li><%= link_to "Sign out", destroy_user_session_path, :method => :delete %></li>
						</ul>
					</li>
					<%= render "layouts/style_switcher" %>
				<% else %>
					<li><%= link_to "Sign in", new_user_session_path %> </li>
					<li><%= link_to "Sign up", new_user_registration_path %></li>
				<% end %>
			</ul>
		</div>
	</div>
</div>
